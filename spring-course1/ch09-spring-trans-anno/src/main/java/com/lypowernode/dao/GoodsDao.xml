<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org.dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lypowernode.dao.GoodsDao">
    <!--查询-->
    <select id="selectGoods" resultType="com.lypowernode.domain.Goods">
        <!--                                         传入进来的商品编号
                                                           ↓         -->
        select id,name,amount,price from goods where id=#{gid}
    </select>

    <!--更新库存-->
    <update id="updateGoods">
        <!--               更新的 = 库存的  -  购买的    条件是   id对应的商品
                             ↓       ↓         ↓       ↓         ↓       -->
        update goods set  amount = amount -#{amount} where id=#{id}
    </update>
    <!--补货以后更新库存-->
    <update id="insertGoods">
        <!--        补货以后更新的 = 库存的 -(进货)购买的 条件是   id对应的商品
                             ↓       ↓         ↓       ↓         ↓       -->
        update goods set  amount = amount +#{amount} where id=#{id}
    </update>



    <insert id="insertNewGoods" parameterType="com.lypowernode.domain.Goods">
        insert into goods values (#{id}, #{name}, #{amount}, #{price})

    </insert>

</mapper>