<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

  <!--  你要用那个对象,就是bean声明那个对象:

  <bean id="mysql" class="com.homework.dao.impl.UserDaoImpl"/>
    <bean id="oracleDao" class="com.homework.dao.impl.OracleImpl"/>

  声明service对象:
    <bean id="userService" class="com.homework.service.impl.UserServiceImpl">
       set注入:
        <property name="dao" ref="oracle"/>
    </bean>-->
    <context:component-scan base-package="com.homework.dao"/>
    <context:component-scan base-package="com.homework.service"/>

</beans>



